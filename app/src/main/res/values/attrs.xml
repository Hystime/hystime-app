<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <declare-styleable name="TimerView">
        <attr name="type" format="enum">
            <enum name="normal" value="0" />
            <enum name="pomodoro" value="1" />
            <enum name="normal_break" value="2" />
            <enum name="pomodoro_break" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="HeatMapView">
        <attr name="ceilSize" format="dimension" />
    </declare-styleable>


    <declare-styleable name="NumberPickerPreferenceCompat">
        <attr name="minValue" format="integer" />
        <attr name="maxValue" format="integer" />
        <attr name="unitText" format="string|reference" />
        <attr name="wrapSelectorWheel" format="boolean" />
        <attr name="entries" format="reference" tools:ignore="ResourceName" />
        <attr name="android:entries" />
    </declare-styleable>

    <string-array name="units">
        <item>@string/hour</item>
        <item>@string/minute</item>
        <item>@string/second</item>
    </string-array>

</resources>