<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.timer.timing.FinishFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/work_finish_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/ref"
        app:layout_constraintLeft_toLeftOf="@+id/ref"
        app:layout_constraintRight_toRightOf="@+id/ref"
        app:layout_constraintTop_toTopOf="@+id/ref">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="â¤ï¸"
            android:textColor="#FF5252"
            android:textSize="80sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/work_finish_hint"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
            android:textFontWeight="700" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/break_finish_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/ref"
        app:layout_constraintLeft_toLeftOf="@+id/ref"
        app:layout_constraintRight_toRightOf="@+id/ref"
        app:layout_constraintTop_toTopOf="@+id/ref">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="ðŸ’ª"
            android:textColor="#FF5252"
            android:textSize="80sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/break_finish_hint"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
            android:textFontWeight="700" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <View
        android:id="@+id/ref"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/timer_horizontal_margin"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="W,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="@dimen/timer_dias"
        app:type="normal"
        tools:ignore="HardcodedText" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/break_finish"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/timer_horizontal_margin_half"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ref">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/start2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="12dp"
            android:text="@string/break_start"
            android:textAllCaps="false"
            android:textSize="16sp"
            app:cornerRadius="20dp"
            tools:ignore="TextContrastCheck" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/exit2"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="12dp"
            android:text="@string/exit"
            android:textAllCaps="false"
            android:textSize="16sp"
            app:cornerRadius="20dp" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/work_finish"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/timer_horizontal_margin_half"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ref">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="12dp"
            android:text="@string/break_start"
            android:textAllCaps="false"
            android:textSize="16sp"
            app:backgroundTint="@color/relax_color"
            app:cornerRadius="20dp"
            tools:ignore="TextContrastCheck" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/skip"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="12dp"
            android:text="@string/break_skip"
            android:textAllCaps="false"
            android:textColor="#2E7D32"
            android:textSize="16sp"
            app:cornerRadius="20dp"
            app:strokeColor="@color/relax_color" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/exit"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="12dp"
            android:text="@string/exit"
            android:textAllCaps="false"
            android:textColor="#2E7D32"
            android:textSize="16sp"
            app:cornerRadius="20dp"
            app:strokeColor="@color/relax_color" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>